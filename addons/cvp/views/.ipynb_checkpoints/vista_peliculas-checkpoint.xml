<odoo>
  <data>
      
      <record model="ir.ui.view" id="cvp.list">
      <field name="name">cvp list</field>
      <field name="model">cvp.cvp_peliculas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="titulo"/>
          <field name="sinopsis"/>
          <field name="costo_pelicula"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.actions.act_window" id="cvp.action_window">
      <field name="name">cvp window</field>
      <field name="res_model">cvp.cvp_peliculas</field>
      <field name="view_mode">tree,form</field>
        <field name="view_id" ref="cvp.list"></field>
    </record>
      
  </data>
</odoo>